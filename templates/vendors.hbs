<h1>Welcome New Vendors!</h1>

  <form>
    {{input value=vendorName id="vendorName" class="form-control" placeholder="Enter Your Company Name!"}}
    <select class="ember-select">
      {{#each}}
          <option {{bind-attr value=name}}>{{name}}</option>
      {{/each}}
    </select> Or <a href="#/lots"> Enter a new Lot! </a>

    <div class="form-group">
      {{input value=description class='form-control' placeholder='Enter a Item Name'}}
    </div>
    <div class="form-group">
      {{input value=price class='form-control' placeholder='Price'}}
    </div>
    <div class="form-group">
      {{input value=story class='form-control' placeholder='Enter a description'}}
    </div>
    <div class="form-group">
      {{input value=year class='form-control' placeholder='Year'}}
    </div>

    <button {{action 'save'}} name="button" class="btn btn-default">Save</button>
  </form>
